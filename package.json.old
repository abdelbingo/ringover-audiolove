{
  "name": "Ringover",
  "description": "Ringover desktop application",
  "version": "2.0.16",
  "author": "Ringover Group",
  "email": "support@ringover.com",
  "main": "app/main.js",
  "config": {
    "APPLEID": "alexandre.alcuvilla@bjtmail.com",
    "APPLEIDPASS": "decp-shxn-rbeu-kozz"
  },
  "homepage": "index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/ringover/ringover-desktop-v2.git"
  },
  "build": {
    "appId": "com.ringover.desktop",
    "icon": "build/icon_app.png",
    "compression": "maximum",
    "afterSign": "notarize.js",
    "directories": {
      "output": "release/"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ringover",
        "repo": "ringover-desktop-v2"
      }
    ],
    "nsis": {
      "oneClick": false,
      "runAfterFinish": true,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}_setup.${ext}",
      "deleteAppDataOnUninstall": true
    },
    "win": {
      "artifactName": "${productName}.${ext}",
      "publish": [
        "github"
      ],
      "publisherName": [
        "Ringover Group",
        "BJT PARTNERS"
      ],
      "target": [
        {
          "target": "nsis"
        },
        {
          "target": "portable"
        },
        {
          "target": "msi"
        }
      ]
    },
    "linux": {
      "artifactName": "${productName}.${ext}",
      "publish": [
        "github"
      ],
      "maintainer": "Support Ringover <support@ringover.com>",
      "target": [
        {
          "target": "AppImage"
        },
        {
          "target": "deb"
        },
        {
          "target": "snap"
        },
        {
          "target": "freebsd"
        },
        {
          "target": "rpm"
        },
        {
          "target": "tar.gz"
        }
      ],
      "category": "Telephony",
      "icon": "app/assets/icons/linux/tray.png"
    },
    "mac": {
      "artifactName": "${productName}.${ext}",
      "publish": [
        "github"
      ],
      "target": [
        "dmg",
        "zip"
      ],
      "asarUnpack": [
        "**/*.node"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "This app requires microphone access to record audio"
      }
    }
  },
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "start_dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist:win32": "electron-builder --win --ia32",
    "dist:win64": "electron-builder --win --x64",
    "dist:linux": "electron-builder --linux",
    "dist:mac": "electron-builder --mac",
    "dist:all": "electron-builder -mwl",
    "publish": "electron-builder  --win --publish always"
  },
  "devDependencies": {
    "electron": "18.0.0",
    "electron-builder": "20.34.0",
    "electron-notarize": "^0.1.1",
    "grunt-contrib-compress": "^1.6.0",
    "grunt-electron-installer": "^2.1.0"
  },
  "dependencies": {
    "@gnaudio/jabra-node-sdk": "^3.2.3",
    "auto-launch": "^5.0.5",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.0.0",
    "electron-windows-badge": "^1.1.0",
    "node-fetch": "^2.6.1",
    "node-os-utils": "^1.3.5",
    "nodejs-websocket": "^1.7.2",
    "rage-edit": "^1.2.0"
  }
}
